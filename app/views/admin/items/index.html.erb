<%= grid(@item_types_grid) do |g|
  g.column :name => 'ID', :attribute => 'id' 
  g.column :name => '编号', :attribute => 'no' 
  
	g.column :name => '图片', :attribute => 'icon' do |item|
		image_tag(item.icon)
	end 

	
  g.column :name => '名称', :attribute => 'name' do |item|
	 link_to(item.name,item)
	end
  g.column :name => '等级', :attribute => 'level' do |item|
	  "等级#{item.level}"
	end
  g.column :name => '介绍', :attribute => 'content' do |item|
		truncate(item.content)
  end

	g.column :name => '类型', :attribute => 'item_type'

  g.column do |item|
    link_to('Edit', edit_item_path(item))
  end
end -%>