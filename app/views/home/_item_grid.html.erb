
<% if @items_grid%>
<%= grid(@items_grid, show_filters: :when_filtered, hide_csv_button: true) do |g|
  g.column :name => '图片', :attribute => 'icon',:model=>"Item", filter: false do |item|
		image_tag(item.item.icon)
	end 

  g.column :name => '名称', :attribute => 'name',:model=>"Item" do |item|
	 link_to(item.item.name,item)
	end
	
	g.column :name => '等级', :attribute => 'level',:model=>"Item" do |item|
	  "等级#{item.item.level}"
	end
	
	g.column :name => '类型', :attribute => 'item_type',:model=>"Item", filter: false do |item|
		item.item.item_type.chinese_name if item.item.item_type
	end

  g.column :name => '介绍', :attribute => 'content',:model=>"Item" do |item|
			render 'items/grid_item_stat',:@item=>item.item
  end



end -%>
<%end%>